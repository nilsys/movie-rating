extends ../layout/common

block style
    link(rel="stylesheet", href="/css/form.css")

block content
    div.form-container
        form.form(method='POST', action="/admin/login" novalidate)
            div.form__title
                h1 Welcome Back!
            div.form-input
                input(type='text', placeholder="Enter Email Address...", name="email")
            div.form-input
                input(type='password', placeholder="Password", name="password")
            div.action
                button.btn(type='submit') Log In
        div.breaker
        div.signup
            a(href="/admin/signup")
                button.btn.btn-danger(type='submit') Sign Up